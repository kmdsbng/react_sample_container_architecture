{
  "compilerOptions": {
    "outDir": "frontend/__build__",
    "target": "ES6",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "jsx": "react"
  },
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "forkCheckerSilent": false
  },
  "exclude": [
    "node_modules",
    "vendor"
  ]
}
